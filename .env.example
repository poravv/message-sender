# Configuración del servidor
PORT=3009                           # Puerto en el que se ejecutará el servidor
RAILWAY_STATIC_URL=http://localhost # URL base para recursos estáticos
PUBLIC_URL=http://localhost         # URL pública del servidor
RESTART_PASSWORD=cambiar123         # Contraseña para reiniciar/deshabilitar el servicio
ALLOWED_ORIGINS=http://ejemplo.com,http://app.ejemplo.com  # Dominios permitidos, separados por comas

# Configuración de Base de Datos (opcional)
DB_HOST=localhost                   # Host de la base de datos
DB_USER=usuario                     # Usuario de la base de datos
DB_PASSWORD=contraseña             # Contraseña de la base de datos
DB_DATABASE=nombre_db              # Nombre de la base de datos
DB_PORT=3306                       # Puerto de la base de datos

# Configuración de Seguridad y Rendimiento
NODE_ENV=production                # Entorno de ejecución (production/development)
MAX_RETRIES=3                     # Número máximo de reintentos para mensajes fallidos
BATCH_SIZE=100                    # Tamaño del lote para envío de mensajes
INACTIVITY_TIMEOUT=1800000        # Tiempo de inactividad antes de desconexión (30 min en ms)